<header>
  <h1>Books</h1>
</header>

<main>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"   %></td>
      </tr>
    <% end %>
    </tr>
  </table>

  <h2>New book</h2>
  <!--エラーボックス-->
  <% if @book.errors.any? %>
    <div class="error-box">
      <p class="error-box-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <div class="error-box-message">
        <% @book.errors.full_messages.each do |massage| %>
        <p><%= massage %></p>
        <% end %>
      </div>
    </div>
  <% end %>

<!--エラーありなしで分岐している-->
  <div class="create-form">
    <%= form_with model: @book, url: books_path, method: :post do |f| %>
      <% if @book.errors.where(:title).empty? %> <!-- エラーがない場合 -->
        <h2>Title</h2>
        <%= f.text_field :title %>
      <% else %> <!-- エラーがある場合 -->
        <h2 class="create-form-error">Title</h2>
        <div class="create-form-error">
          <%= f.text_field :title %>
        </div>
      <% end %>

      <% if @book.errors.where(:body).empty? %> <!-- エラーがない場合 -->
        <h2>Body</h2>
        <%= f.text_area :body %>
      <% else %> <!-- エラーがある場合 -->
        <h2 class="create-form-error">Body</h2>
        <div class="create-form-error">
          <%= f.text_area :body %>
        </div>
      <% end %>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</main>