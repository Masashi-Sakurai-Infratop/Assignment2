<header>
  <h1>Editing Book</h1>
</header>

<main>
  <!--エラーボックス-->
  <% if @book.errors.any? %>
  <div class="error-box">
    <p class="error-box-title"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <div class="error-box-message">
      <% @book.errors.full_messages.each do |massage| %>
      <p><%= massage %></p>
      <% end %>
    </div>
  </div>
  <% end %>
  <!--エラーありなしで分岐している-->
  <div class="create-form">
    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <% if @book.errors.where(:title).empty? %> <!-- エラーがない場合 -->
        <h2>Title</h2>
        <%= f.text_field :title %>
      <% else %> <!-- エラーがある場合 -->
        <h2 class="create-form-error">Title</h2>
        <div class="create-form-error">
          <%= f.text_field :title %>
        </div>
      <% end %>

      <% if @book.errors.where(:body).empty? %> <!-- エラーがない場合 -->
        <h2>Body</h2>
        <%= f.text_area :body %>
      <% else %> <!-- エラーがある場合 -->
        <h2 class="create-form-error">Body</h2>
        <div class="create-form-error">
          <%= f.text_area :body %>
        </div>
      <% end %>
      <%= f.submit "Update Book" %>
    <% end %>
  </div>

  <%= link_to "Show", book_path %>
  <%= link_to "Back", books_path %>
</main>